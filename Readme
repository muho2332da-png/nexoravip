#!/bin/bash

# TERMUX MENÜ SİSTEMİ - NEXORA VIP

while true; do
    clear
    echo "=============================="
    echo "     💎 NEXORA VIP Terminal Menu"
    echo "=============================="
    echo "1) Botu Başlat"
    echo "2) Telegram'a Bilgi Gönder"
    echo "3) Yardım"
    echo "4) Çıkış"
    echo "=============================="
    read -p "Seçiminizi girin: " secim

    case $secim in
        1)
            echo "▶️ NEXORA VIP Bot başlatılıyor..."
            python benimbot.py
            read -p "Devam etmek için Enter'a basın..."
            ;;
        2)
            echo "📤 Telegram'a bilgi gönderiliyor..."
            python send_message.py
            read -p "Devam etmek için Enter'a basın..."
            ;;
        3)
            echo "ℹ️ Yardım Menüsü"
            echo "1: Botu başlatır"
            echo "2: Telegram'a bilgi yollar"
            echo "4: Menüyü kapatır"
            read -p "Devam etmek için Enter'a basın..."
            ;;
        4)
            echo "👋 Görüşmek üzere Nexora VIP üyesi..."
            exit 0
            ;;
        *)
            echo "❌ Geçersiz seçim."
            read -p "Devam etmek için Enter'a basın..."
            ;;
    esac
done
